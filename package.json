{
  "name": "vigilance-conventionnal",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "main": "dist/main.js",
  "scripts": {
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "ci:jest": "jest",
    "ci:prettier": "prettier --check ./**/*.{js,ts,json,vue,html,css,less}",
    "ci:tsc": "tsc -p tsconfig.json --noEmit",
    "ci:xo": "xo ./{src,tests}/**/*.{js,ts}",
    "fix:prettier": "prettier --write ./**/*.{js,ts,json,vue,html,css,less}",
    "validate": "run-s -ln fix:prettier ci:tsc ci:xo",
    "start": "node dist/main.js commit",
    "unit:coverage": "jest --coverage",
    "unit:watch": "jest --watch",
    "prewatch": "rimraf dist",
    "watch": "webpack --watch --mode development"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run ci:tsc && lint-staged"
    }
  },
  "lint-staged": {
    "./{src/tests}/**/*.{ts,js}": [
      "prettier --write",
      "xo"
    ],
    "./src/**/*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "caporal": "^1.4.0",
    "chalk": "^4.0.0",
    "dedent": "^0.7.0",
    "iconv-lite": "^0.5.1",
    "inquirer": "^7.1.0",
    "inversify": "^5.0.1",
    "inversify-binding-decorators": "^4.0.0",
    "inversify-inject-decorators": "^3.1.0",
    "lodash": "^4.17.15",
    "longest": "^2.0.1",
    "reflect-metadata": "^0.1.13",
    "sprintf-js": "^1.1.2",
    "word-wrap": "^1.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@types/chalk": "^2.2.0",
    "@types/dedent": "^0.7.0",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^25.2.2",
    "@types/lodash": "^4.14.151",
    "@types/node": "^14.0.1",
    "@types/sprintf-js": "^1.1.2",
    "@types/word-wrap": "^1.2.1",
    "babel-loader": "^8.1.0",
    "cache-loader": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "lint-staged": "^10.2.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "shebang-loader": "0.0.1",
    "source-map-loader": "^0.2.4",
    "thread-loader": "^2.1.3",
    "ts-jest": "^25.5.1",
    "ts-loader": "^7.0.4",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2",
    "xo": "^0.30.0"
  }
}
