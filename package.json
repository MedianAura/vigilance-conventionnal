{
  "name": "vigilance-conventionnal",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:prod && nexe ./dist/main.js",
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "ci:jest": "jest",
    "ci:prettier": "prettier --check ./**/*.{js,ts,json,vue,html,css,less}",
    "ci:tsc": "tsc -p tsconfig.json --noEmit",
    "ci:xo": "xo ./src/**/*.{js,ts}",
    "fix:prettier": "prettier --write ./**/*.{js,ts,json,vue,html,css,less}",
    "validate": "run-s -ln fix:prettier ci:tsc ci:xo",
    "commit": "node dist/main.js commit",
    "generate": "node dist/main.js generate",
    "unit:coverage": "jest --coverage",
    "unit:watch": "jest --watch",
    "prewatch": "rimraf dist",
    "watch": "webpack --watch --mode development"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run ci:tsc && lint-staged",
      "commit-msg": "node ./dist/main.js validate $HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "./src/**/*.{ts,js}": [
      "prettier --write",
      "xo"
    ],
    "./src/**/*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "caporal": "^1.4.0",
    "chalk": "^4.0.0",
    "dedent": "^0.7.0",
    "gitlog": "^4.0.0",
    "iconv-lite": "^0.5.1",
    "inquirer": "^7.1.0",
    "inversify": "^5.0.1",
    "inversify-binding-decorators": "^4.0.0",
    "inversify-inject-decorators": "^3.1.0",
    "lodash": "^4.17.15",
    "longest": "^2.0.1",
    "moment": "^2.25.3",
    "parse-git-config": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "sprintf-js": "^1.1.2",
    "word-wrap": "^1.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@types/chalk": "^2.2.0",
    "@types/dedent": "^0.7.0",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^25.2.2",
    "@types/lodash": "^4.14.151",
    "@types/node": "^14.0.1",
    "@types/sprintf-js": "^1.1.2",
    "@types/word-wrap": "^1.2.1",
    "babel-loader": "^8.1.0",
    "cache-loader": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "lint-staged": "^10.2.2",
    "nexe": "^3.3.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "shebang-loader": "0.0.1",
    "source-map-loader": "^0.2.4",
    "thread-loader": "^2.1.3",
    "ts-jest": "^25.5.1",
    "ts-loader": "^7.0.4",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2",
    "xo": "^0.30.0"
  },
  "xo": {
    "envs": [
      "es2020",
      "node",
      "browser"
    ],
    "extends": [
      "xo-typescript",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "extensions": [
      "ts"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "prettier": false,
    "rules": {
      "@typescript-eslint/indent": "off",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/member-naming": "off",
      "@typescript-eslint/prefer-readonly-parameter-types": "off",
      "@typescript-eslint/no-floating-promises": [
        0,
        {
          "ignoreIIFE": true
        }
      ],
      "@typescript-eslint/restrict-template-expressions": [
        0,
        {
          "allowNumber": true,
          "allowAny": true
        }
      ],
      "new-cap": "off",
      "padding-line-between-statements": "off"
    },
    "space": false
  }
}
